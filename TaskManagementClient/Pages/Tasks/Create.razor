@page "/tasks/create/"
@attribute [Authorize(Roles = Roles.Administartor)]

<h3>Create new Camera</h3>

<EditForm Model="_task" OnValidSubmit="HandleCreateTask">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        <label>Camera Name</label>
        <InputText class="form-control" @bind-Value="_task.Title"></InputText>
        <ValidationMessage For="@(() => _task.Title)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Login</label>
        <InputText class="form-control" @bind-Value="_task.Description"></InputText>
        <ValidationMessage For="@(() => _task.Description)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Password</label>
        <InputText class="form-control" @bind-Value="_task.Description"></InputText>
        <ValidationMessage For="@(() => _task.Description)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Ip Address</label>
        <InputText class="form-control" @bind-Value="_task.Description"></InputText>
        <ValidationMessage For="@(() => _task.Description)"></ValidationMessage>
    </div>
    <button type="submit" class="btn btn-primary"><span class="oi oi-pencil"></span>Create</button>
    <button @onclick="BackToList" class="btn btn-outline-secondary"><span class="oi oi-media-skip-backward"></span>Back To List</button>
</EditForm>